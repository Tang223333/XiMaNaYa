<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/selector_search_recommend">

    <ImageView
        android:id="@+id/search_recommend_icon"
        android:layout_width="20dp"
        android:layout_centerVertical="true"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/search_icon"/>

    <TextView
        android:id="@+id/search_recommend_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_toRightOf="@id/search_recommend_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:textColor="@color/sub_txt_titel"
        android:text="我是标题"/>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/sub_txt_bg"/>

</RelativeLayout>