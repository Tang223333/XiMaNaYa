<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_album_item_bg"
    android:layout_height="75dp">

    <com.example.ximanaya.View.RoundRectImageView
        android:id="@+id/album_cover"
        android:layout_width="68dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="5dp"
        android:layout_height="65dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/album_cover"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/album_titel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:textColor="#000"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="afsadfsdafasdfasd"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textSize="12sp"
            android:id="@+id/album_description_tv"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:textColor="#ff848484"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="afsadfsdafasdfasd"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/play_info_icon"/>
                <TextView
                    android:id="@+id/album_play_conunt"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ff848484"
                    android:text="312"
                    android:layout_marginLeft="2dp"
                    android:textSize="7sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/ic_sound"/>
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ff848484"
                    android:id="@+id/album_content_size"
                    android:text="312"
                    android:layout_marginLeft="2dp"
                    android:textSize="7sp"/>
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>